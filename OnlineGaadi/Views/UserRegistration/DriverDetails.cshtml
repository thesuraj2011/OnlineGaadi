@model IEnumerable<OnlineGaadi.Models.DriverRegistrationProp>

@{
    ViewData["Title"] = "DriverDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DriverDetails</h1>

<form asp-controller="DriverRegistration" asp-action="FindDriverByLocation">
    <p>
        Enter your location: <input type="text" name="driverLocation" />
        <input type="submit" value="Filter" />
    </p>
</form>

@if (Model.Count() > 0 && Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DriverName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MobileNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VehicleNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PickupLocation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DriverName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MobileNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PickupLocation)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="question-summary">
        <br /><br /><br />
        <p>No record found..</p>
        <br /><br />
    </div>
}
